        <h3>Your Business :</h3>
        <h4><%= link_to "#{@business.name}", admin_url(subdomain: "#{@business.slug}") %></h4>
      <%else%>
        Here you can <%= link_to "Create Business", new_business_path %>
      <%end%>
    </div>
  </div>
</div><br><br>
