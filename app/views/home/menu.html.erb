<div class="page-wrapper">
  <div class="content">
    <img src="assets/sushi.png" border="0" alt="sushi" width="100%">
    <% if @menu_items.empty? %>
      <h1>THERE ARE NO MENU ITEMS.<br>NO FOOD 4 U</h1>
    <% end %>
      <div class="search">Search for deliciousness:<input type="text" name="category-fuzzy" value="" onkeyup="fuzzy(this.value);" style="clear: both;"></div>
      <div style="clear: both;"></div>

        <% @categories.each do |category| %>
        <div class="menu-category"><%= category.title %></div><br>
          <% category.menu_items.each do |menu_item| %>
            <div class="menu-item" categories="<%= menu_item.categories.pluck("title").join "," %>">
              <div class="menu-item-img"><img src="/assets/menuitem.gif"></div>
              <div class="menu-item-title"><h3><%= menu_item.title.upcase %></h3></div>
              <div class="menu-item-description"><%= menu_item.description %></div><br>
              <div class="menu-item-button"><%= button_to "Add to Cart" %></div>
              <div class="menu-item-price"><%= number_to_currency(menu_item.price / 100.0) %></div>
            </div>
          <% end %>
          <div style="clear: both;"></div>
         <% end %>
  </div>
</div>
