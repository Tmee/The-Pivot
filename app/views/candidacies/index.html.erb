<div class="container">
  <h1>Here are the candidates for this position</h1><br>
  <% @candidacies.each do |candidacies| %>
  <%= candidacies.user.full_name %>
  <%= candidacies.user.email %><br>
  <%= candidacies.letter_to_business %><br>
  <%=link_to("Accept Application", accept_candidacy_url(id: candidacies.id)) %>
  <%=link_to("Reject Application", reject_candidacy_url(id: candidacies.id)) %>
  <br>
  <br>
  <% end %>

</div>
