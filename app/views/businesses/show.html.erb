<%if @business == nil%>
  <h2>Sorry, that business does not have an account with EmployMe</h2>
  <h4>Want to Sign up?</h4>
<% else %>
  <div class="jumbotron">
    <div class="container">
      <h1><%=@business.name%></h1>
      <p><%=@business.description%></p><br>
    </div>
    <div class="col-md-12 text-center">
      <%=@business.address%>, <%=@business.state%> |  <%=@business.phone%>  |  <%=@business.url%>
    </div>
  </div>
  <div class="container">
    <h2>Available Jobs</h2>
      <div class="row">
        <% @listings.each do |listing| %>
          <div class="col-md-4">
            <h3><%=listing.title%></h3>
            <p><%=listing.description%></p>
            <p><%= link_to "Add to basket", "/listings/:id/add_to_cart", method: :post, class: "btn btn-default" %><br></p>
          </div>
        <%end%>
      </div>
    <hr>
  </div>
<%end%>


