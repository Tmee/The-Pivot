<div class="row text-center">
  <div class="jumbotron">
      <h1>All Businesses</h1><br/>
      <h4>Where do you want to work?</h4><br/>
  </div>
</div>
<div class="container">
    <div class="row">
    <%@business.each do |business|%>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
              <h4><i class="fa fa-fw fa-check"><%=business.name%></h4>
          </div>
           <div class="panel-body format-panel">
              <p><%=business.description%></p>
              <%=link_to "Learn More >>", root_url(subdomain: business.slug) %>
          </div>
        </div>
      </div>
    <%end %>
  </div>
</div>


