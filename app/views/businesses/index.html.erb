<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Welcome to EmployMe</h1>
      <h4>Where do you want to work?</h4><br/>
    </div>
    <%@business.each do |business|%>
      <div class="col-md-4">
        <div class="panel panel-default">
          <div class="panel-heading">
              <h4><i class="fa fa-fw fa-check"><%=business.name%></h4>
          </div>
          <div class="panel-body">
              <p><%=business.description%></p>
              <%=link_to "Learn More >>", root_url(subdomain: business.slug) %>
          </div>
        </div>
      </div>
    <%end %>
  </div>
</div>