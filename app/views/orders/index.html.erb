<% @orders.each do |order| user = order.user %>
<div style="border: 1px solid black; margin: 10px; padding: 10px;">
  Name: <%= user.full_name %><br>
  Username: <%= user.user_name %><br>
  Email: <%= user.email %><br>
  <h4>Your order:</h4>
  <div class="items-in-this-order">
    <%= render partial: "orders/order_menu_item", collection: order.order_menu_items %>
  </div>
  Your order was placed at <%= order.created_at %>
</div>
<% end %>
