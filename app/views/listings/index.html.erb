<div class="jumbotron text-center">
  <h1>Job Listings</h1>
</div>

<div class="container">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-4 portfolio-item">
        <h4><%= listing.title %></h4>
        <h6>Description:    <%= listing.description %><br>
        Wage:    $<%= listing.wage %><br>
        Hours per week:    <%= listing.hours %><br>
        Number of postions open:    <%= listing.number_of_positions %><br>
        Closing date:    <%= listing.end_date %></h6>
        <%= link_to "Add to basket", add_listing_path(listing.id), method: :post, class: "btn btn-default" %><br>
        <br><br>
      </div>
    <% end %>
  </div>
</div>
