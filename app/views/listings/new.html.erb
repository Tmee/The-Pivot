<div class="jumbotron text-center">
  <h1>Job Listing Creator</h1>
</div>

<div class="container">
    <div class="row">
      <%= form_for Listing.new do |f| %>
      <%= f.label :title %><br>
      <%= f.text_field :title, placeholder: 'Title', size: "60x60" %></br>
      <%= f.label :description %><br>
      <%= f.text_field :description, placeholder: 'Description', size: "20x30" %></br>
      <%= f.label :wage %><br>
      <%= f.number_field :wage, placeholder: 'Wage', size: "20x30" %></br>
      <%= f.label :hours %><br>
      <%= f.number_field :hours, placeholder: 'Hours', size: "20x30" %></br>
      <%= f.label :number_of_positions %><br>
      <%= f.number_field :number_of_positions, placeholder: 'Number of Positions', size: "60x60" %></br>
      <%= f.label :end_date %><br>
      <%= f.date_field :end_date, placeholder: 'End Date', size: "60x60" %></br>
      <%= f.hidden_field :business_id, :value => @business_id %>
        <button type="submit">Submit</button><br><br>
      <% end %>
    </div>
</div>
