<%if flash[:alert] %>
  <div class="alert alert-danger" role="alert">
    <%= flash[:alert] %>
    <a href="#" class="close">&times;</a>
  </div><br/>
<%end%>

<%if flash[:notice] %>
  <div class="alert alert-warning" role="alert">
    <%= flash[:notice] %>
    <a href="#" class="close">&times;</a>
  </div><br/>
<%end%>

<%if flash[:info] %>
  <div class="alert alert-info" role="alert">
    <%= flash[:info] %>
    <a href="#" class="close">&times;</a>
  </div>
<%end%>

<%if flash[:success] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:success] %>
    <a href="#" class="close">&times;</a>
  </div>
<%end%>

